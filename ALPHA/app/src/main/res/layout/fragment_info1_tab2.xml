<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.bootcamp.Info1Tab2Fragment">
    <ScrollView
        app:layout_constraintTop_toTopOf="parent"
        android:scrollbars="none"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/img_tab2_photo"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:fontFamily="@font/nanumsquareroundextrabold"
                            android:textSize="12sp"
                            android:textColor="#555555"
                            android:text="강사"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanumsquareroundextrabold"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:text="이선준"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:fontFamily="@font/nanumsquareroundextrabold"
                            android:textSize="12sp"
                            android:textColor="#555555"
                            android:text="학교"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanumsquareroundextrabold"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:text="국민대학교"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:fontFamily="@font/nanumsquareroundextrabold"
                            android:textSize="12sp"
                            android:textColor="#555555"
                            android:text="학과"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanumsquareroundextrabold"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:text="스포츠 건강 재활학과"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/nanumsquareroundextrabold"
                    android:textSize="15sp"
                    android:textColor="#FF9852"
                    android:text="Introduction"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquareroundextrabold"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:background="@drawable/edittext_shadow"
                    android:text="안녕하세요! 국민대학교에서 재활과 광고를 전공하고 있는 전지적 고3 시점 멘토 이선준이라고 합니다. 반가워요~!" />
             </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/nanumsquareroundextrabold"
                    android:textSize="15sp"
                    android:textColor="#FF9852"
                    android:text="강사의 한마디"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquareroundextrabold"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:background="@drawable/edittext_shadow"
                    android:text="안녕하세요, 혹시 운동 좋아하시나요? 앞으로 운동을 더 재미있게 만들어 드리기 위해 노력하겠습니다!" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingBottom="50dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/nanumsquareroundextrabold"
                    android:textSize="15sp"
                    android:textColor="#FF9852"
                    android:text="진로를 고민하는 고등학생 친구들에게"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquareroundextrabold"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:background="@drawable/edittext_shadow"
                    android:text="고민하는 것에 시간을 쏟는 것도 좋지만, 한번 체험해 보고 정해도 늦지 않아요! 절대 늦지 않았으니 조바심 가지지 말고, 같이 체험하고 고민해 보며 정해 나가 보아요!" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>