<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/write_knowledge_post_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="@+id/view_knowledge_post_title"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:id="@+id/view_knowledge_post_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquareroundextrabold"
            android:text="지식⁺"
            android:textColor="#4F6BFC"
            android:textSize="33sp" />

        <TextView
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquareroundextrabold"
            android:text="게시판"
            android:textSize="22sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_knowledge_post_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <FrameLayout
                android:id="@+id/knowledge_community_banner_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_knowledge_post_title">

                <ImageView
                    android:id="@+id/knowledge_community_banner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/post_banner_img" />

                <TextView
                    android:id="@+id/knowledge_community_banner_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:fontFamily="@font/nanumsquareroundbold"
                    android:text="1차 수시 모집"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/knowledge_community_banner_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_marginEnd="35dp"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/nanumsquareroundbold"
                    android:text="2023.09.18 ~ 2023.10.13"
                    android:textColor="@color/white"
                    android:textSize="8sp" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/knowledge_community_banner_group">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/nanumsquareroundlarge"
                    android:text="지식 PLUS"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/view_knowledge_post_with_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/nanumsquareroundbold"
                        android:text="질문 제목 테스트 테스트 테스트"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/view_knowledge_post_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_view_post_menu" />
                </LinearLayout>

                <TextView
                    android:id="@+id/view_knowledge_post_with_user_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/nanumsquareroundlarge"
                    android:text="국민대학교 userid"
                    android:textColor="#2446F6"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_view_posts_eye" />

                    <TextView
                        android:id="@+id/knowledge_post_viewers_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="3dp"
                        android:fontFamily="@font/nanumsquareroundlarge"
                        android:text="00,000"
                        android:textColor="#999FAA"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquareroundlarge"
                    android:lineSpacingExtra="5sp"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:background="#ACACAC" />

                <TextView
                    android:id="@+id/view_knowledge_post_with_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="100dp"
                    android:fontFamily="@font/nanumsquareroundlarge"
                    android:lineSpacingExtra="5sp"
                    android:text="I'm like some kind of Supernova Watch out Look at me go 재미 좀 볼 빛의 Core So hot hot 문이 열려 서로의 존재를 느껴 마치 Discord 날 닮은 너 너 누구야 (Drop) 사건은 다가와 Ah Oh Ay 거세게 커져가 Ah Oh Ay That tick that tick tick bomb That tick that tick tick bomb 감히 건드리지 못할 걸Ay 질문은 계속돼 Ah Oh Ay 우린 어디서 왔나 Oh Ay 사건은 다가와 Ah Oh Ay 거세게 커져가 Ah Oh Ay Tell me, tell me, tell me Oh Ay 우린 어디서 왔나 Oh "
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:layout_marginBottom="10dp"
                    android:background="#ACACAC" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_knowledge_post_answer" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="선배님의 답변"
                        android:fontFamily="@font/nanumsquareroundextrabold"
                        android:layout_marginStart="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/view_knowledge_post_with_sch_of_answer"
                        android:layout_marginTop="7.5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#4F6BFC"
                        android:text="국민대학교"
                        android:fontFamily="@font/nanumsquareroundbold" />

                    <TextView
                        android:id="@+id/view_knowledge_post_with_dpt_of_answer"
                        android:layout_marginTop="7.5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#4F6BFC"
                        android:text="에스파학과"
                        android:layout_marginStart="7dp"
                        android:fontFamily="@font/nanumsquareroundbold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/view_knowledge_post_with_answer_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="100dp"
                    android:fontFamily="@font/nanumsquareroundlarge"
                    android:lineSpacingExtra="5sp"
                    android:text="Ah Body bang Make it feel too right 휩쓸린 에너지 It's so special 잔인한 Queen 이며 Scene 이자 종결 이토록 거대한 내 안의 Explosion 내 모든 세포 별로부터 만들어져 (Under my control Ah) 질문은 계속돼 Ah Oh Ay 우린 어디서 왔나 Oh Ay 느껴 내 안에선 Su su su Supernova Nova Can't stop hyperstellar 원초 그걸 찾아 Bring the light of a dying star 불러낸 내 우주를 봐 봐 Supernova 보이지 않는 힘으로 네게 손 내밀어 볼까 가능한 모든 가능성 무한 속의 너를 만나 It's about to bang bang Don't forget my name Su su su Supernova 사건은 다가와 Ah Oh Ay 거세게 커져가 Ah Oh Ay 질문은 계속돼 Ah Oh Ay 우린 어디서 왔나 Oh Ay 사건은 다가와 Ah Oh Ay 거세게 커져가 Ah Oh Ay Tell me, tell me, tell me Oh Ay 우린 어디서 왔나 Oh Ay 우린 어디서 왔나 Oh Ay Nova Can't stop hyperstellar 원초 그걸 찾아 Bring the lig"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>