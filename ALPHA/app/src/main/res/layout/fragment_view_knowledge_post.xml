<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/write_knowledge_post_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="@+id/view_knowledge_post_title"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:id="@+id/view_knowledge_post_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquareroundextrabold"
            android:text="지식⁺"
            android:textColor="#4F6BFC"
            android:textSize="33sp" />

        <TextView
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquareroundextrabold"
            android:text="게시판"
            android:textSize="22sp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/knowledge_community_banner_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_knowledge_post_title">

        <ImageView
            android:id="@+id/knowledge_community_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/post_banner_img" />

        <TextView
            android:id="@+id/knowledge_community_banner_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1차 수시 모집"
            android:fontFamily="@font/nanumsquareroundbold"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical|center_horizontal" />

        <TextView
            android:id="@+id/knowledge_community_banner_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2023.09.18 ~ 2023.10.13"
            android:fontFamily="@font/nanumsquareroundbold"
            android:textSize="8sp"
            android:layout_gravity="bottom|right"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/white"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/knowledge_community_banner_group"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지식 IN"
            android:textSize="12sp"
            android:fontFamily="@font/nanumsquareroundlarge"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/knowledge_post_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="질문 제목 테스트 테스트 테스트"
                android:fontFamily="@font/nanumsquareroundbold"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/view_knowledge_post_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_view_post_menu" />
        </LinearLayout>

        <TextView
            android:id="@+id/view_knowledge_post_user_id"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquareroundlarge"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#2446F6"
            android:text="국민대학교 userid" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_view_posts_eye"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/knowledge_post_viewers_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00,000"
                android:textSize="10sp"
                android:fontFamily="@font/nanumsquareroundlarge"
                android:textStyle="bold"
                android:textColor="#999FAA"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="3dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:lineSpacingExtra="5sp"
            android:fontFamily="@font/nanumsquareroundlarge"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="#ACACAC" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:textSize="14sp"
            android:fontFamily="@font/nanumsquareroundlarge"
            android:textStyle="bold"
            android:lineSpacingExtra="5sp"
            android:text="본문테스테스트 본문 테스트테스트테스트테스트 본문테스트 본문테스트테스본문테스테스트 본문 테스트테스트테스트테스트 본문테스트 본문테스트테스본문테스테스트 본문 테스트테스트테스트테스트 본문테스트"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="#ACACAC" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>