<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:id="@+id/disc_test_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        android:paddingTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_disc_back" />

        <TextView
            android:id="@+id/disc_test_page_test_start_text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="@font/nanumsquareroundextrabold"
            android:paddingTop="13dp"
            android:text="테스트 시작"
            android:textSize="20sp" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/disc_progress_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/disc_test_top" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/disc_next_page"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/disc_question_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/nanumsquareroundbold"
            android:text="14. 평소 내 태도는 _해"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/disc_explanation_text" />

        <LinearLayout
            android:id="@+id/disc_group_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/disc_question_14">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/disc_choice_button"
                android:fontFamily="@font/nanumsquareroundbold"
                android:paddingLeft="15dp"
                android:text="권위적이며 위엄 있어"
                android:textAlignment="textStart"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/disc_choice_button"
                android:fontFamily="@font/nanumsquareroundbold"
                android:paddingLeft="15dp"
                android:text="매력적, 사교적, 외향적이야!"
                android:textAlignment="textStart"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/disc_choice_button"
                android:fontFamily="@font/nanumsquareroundbold"
                android:paddingLeft="15dp"
                android:text="주변 사람들을 잘 따라"
                android:textAlignment="textStart"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/disc_choice_button"
                android:fontFamily="@font/nanumsquareroundbold"
                android:paddingLeft="15dp"
                android:text="객관적인 판단으로 말을 아껴"
                android:textAlignment="textStart"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/disc_question_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/nanumsquareroundbold"
            android:text="15. 내 삶의 페이스는..."
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/disc_test_top"
            app:layout_constraintTop_toBottomOf="@+id/disc_group_14" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/disc_question_15">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/disc_choice_button"
                android:fontFamily="@font/nanumsquareroundbold"
                android:paddingLeft="15dp"
                android:text="빠르다"
                android:textAlignment="textStart"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/disc_choice_button"
                android:fontFamily="@font/nanumsquareroundbold"
                android:paddingLeft="15dp"
                android:text="열정적이다"
                android:textAlignment="textStart"
                android:textSize="13.5sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/disc_choice_button"
                android:fontFamily="@font/nanumsquareroundbold"
                android:paddingLeft="15dp"
                android:text="안정적이다"
                android:textAlignment="textStart"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/disc_choice_button"
                android:fontFamily="@font/nanumsquareroundbold"
                android:paddingLeft="15dp"
                android:text="조절하며 계획적이다"
                android:textAlignment="textStart"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/disc_speech_bubble_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_disc_speech_bubble_2"
        app:layout_constraintBottom_toTopOf="@+id/disc_next_page"
        app:layout_constraintEnd_toStartOf="@+id/disc_character"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanumsquareroundbold"
        android:gravity="center"
        android:layout_marginBottom="14dp"
        android:text="너 자신에 대하여\n충분히 생각하는 시간이었으면 좋겠어...\n결과 꼭 확인해 봐!"
        android:textColor="@color/white"
        android:textSize="11.5sp"
        app:layout_constraintBottom_toBottomOf="@+id/disc_speech_bubble_2"
        app:layout_constraintEnd_toEndOf="@+id/disc_speech_bubble_2"
        app:layout_constraintStart_toStartOf="@+id/disc_speech_bubble_2"
        app:layout_constraintTop_toTopOf="@+id/disc_speech_bubble_2"/>

    <ImageView
        android:id="@+id/disc_character"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_disc_character"
        app:layout_constraintBottom_toTopOf="@+id/disc_next_page"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/disc_next_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E2E7FF"
        android:text="다음 페이지..."
        android:textColor="#6369F8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>