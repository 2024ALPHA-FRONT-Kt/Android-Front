<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.knowledge_community.ViewKnowledgePostActivity">

    <ImageView
        android:id="@+id/view_knowledge_post_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="@+id/view_knowledge_post_title_top"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/view_knowledge_post_title_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquareroundextrabold"
            android:text="지식⁺"
            android:textColor="#4F6BFC"
            android:textSize="33sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/nanumsquareroundextrabold"
            android:text="게시판"
            android:textSize="22sp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/knowledge_community_banner_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_knowledge_post_title_top">

        <ImageView
            android:id="@+id/knowledge_community_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/post_banner_img" />

        <TextView
            android:id="@+id/knowledge_community_banner_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:fontFamily="@font/nanumsquareroundbold"
            android:text="1차 수시 모집"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/knowledge_community_banner_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/nanumsquareroundbold"
            android:text="2023.09.18 ~ 2023.10.13"
            android:textColor="@color/white"
            android:textSize="8sp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/knowledge_community_banner_group">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nanumsquareroundlarge"
            android:text="지식 PLUS"
            android:textSize="12sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/view_knowledge_post_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/nanumsquareroundbold"
                android:text="질문 제목 테스트 테스트 테스트"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/view_knowledge_post_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_view_post_menu" />
        </LinearLayout>

        <TextView
            android:id="@+id/view_knowledge_post_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nanumsquareroundlarge"
            android:text="국민대학교 userid"
            android:textColor="#2446F6"
            android:textSize="12sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_view_posts_eye" />

            <TextView
                android:id="@+id/knowledge_post_viewers_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="3dp"
                android:fontFamily="@font/nanumsquareroundlarge"
                android:text="00,000"
                android:textColor="#999FAA"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquareroundlarge"
            android:lineSpacingExtra="5sp"
            android:textSize="12sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="#ACACAC" />

        <TextView
            android:id="@+id/view_knowledge_post_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="100dp"
            android:fontFamily="@font/nanumsquareroundlarge"
            android:lineSpacingExtra="5sp"
            android:text="Oh"
            android:textSize="14sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:background="#ACACAC" />

        <EditText
            android:id="@+id/view_knowledge_post_entering_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/knowledge_post_answer_background"
            android:fontFamily="@font/nanumsquareroundlarge"
            android:gravity="start"
            android:hint="구체적인 답변은 학생들에게 도움이 될 수 있어요."
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:textSize="12sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/view_knowledge_post_answer_enter_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="70dp"
            android:backgroundTint="#6369F8"
            android:background="@drawable/knowledge_post_answering_button"
            android:fontFamily="@font/nanumsquareroundextrabold"
            android:text="답변하기"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>